{
  "manifest_version": 3,
  "name": "YouTube Live PIP with Chat",
  "version": "1.0.0",
  "description": "YouTube LiveをチャットとともにPIPで表示",
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pip.html", "pip.js", "pip.css", "chat.html"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
